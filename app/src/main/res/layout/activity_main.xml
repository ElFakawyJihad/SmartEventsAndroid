<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <EditText
        android:id="@+id/password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginBottom="145dp"
        android:layout_above="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_light"
        android:hint="Mot de passe"
        android:textColorHint="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/subscribeButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#99C0C2CE" />


    <TextView
        android:text="SmartEvent "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:id="@+id/mainActivityTitle"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:textSize="44sp"
        android:textStyle="normal|bold"
        android:textColor="@color/wallet_bright_foreground_holo_light"
        android:fontFamily="serif" />

    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:background="?android:attr/editTextBackground"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false"
        android:textSize="20sp"
        android:hint="Email"
        android:textColorHint="@android:color/background_light" />

    <TextView
        android:text="La réponse rapide à votre ennui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainActivityTitle"
        android:layout_marginTop="21dp"
        android:id="@+id/slogan"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se connecter"
        android:layout_gravity="center"
        android:background="#99C0C2CE"
        android:layout_above="@+id/subscribeButton"
        android:layout_marginBottom="11dp" />
    />


</RelativeLayout>
