<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jihad.smartevents.CreateEventActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Titre de l'évenement"
        android:ems="10"
        android:id="@+id/eventTitle"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/SpinnerEventCategory"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:entries="@array/eventCategorylist">
    </Spinner>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="Catégorie de l'évènement "
        android:ems="10"
        android:layout_marginTop="55dp"
        android:id="@+id/eventCategoy"
        android:layout_alignTop="@+id/eventTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="470px"
        android:layout_height="180px"
        android:inputType="text"
        android:text="Description de l'évènement"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/eventDescription"
        android:layout_below="@+id/eventCategoy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/eventDate"
        android:text="Date de l'évènement"
        android:layout_below="@+id/eventDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/eventCapacity"
        android:text="Nombres de places"
        android:layout_below="@+id/eventDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/eventLocalisation"
        android:text="Lieu"
        android:layout_below="@+id/eventCapacity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Button
        android:text="Créer l'évenement"
        android:onClick="createEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createEventButton"
        android:layout_alignTop="@+id/eventLocalisation"
        android:layout_toRightOf="@+id/eventDescription"
        android:layout_toEndOf="@+id/eventDescription"
        android:layout_marginTop="44dp" />


</RelativeLayout>
